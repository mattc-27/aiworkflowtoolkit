{
  "hosting": [
    {
      "target": "dev",
      "source": "apps/tools-next",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "/(.*)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=60"
            }
          ]
        }
      ]
    },
    {
      "target": "prod",
      "source": "apps/tools-next",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [
        {
          "source": "/(.*)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=300, s-maxage=600"
            }
          ]
        }
      ]
    }
  ]
}