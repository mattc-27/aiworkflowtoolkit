{
  "name": "ai-tools",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@10.8.2",
  "scripts": {
    "dev": "npm --prefix apps/tools-next run dev",
    "build": "npm --prefix apps/tools-next run build",
    "start": "npm --prefix apps/tools-next run start",
    "lint": "npm --prefix apps/tools-next run lint",
    "typecheck": "npm --prefix apps/tools-next run typecheck",
    "deploy:dev": "firebase deploy --only hosting:dev",
    "deploy:prod": "firebase deploy --only hosting:prod --project aiworkflowtoolkit-prod",
    "preview:dev": "firebase hosting:channel:deploy dev --expires 7d",
    "use:dev": "firebase use aiworkflowtoolkit-dev",
    "use:prod": "firebase use aiworkflowtoolkit-prod"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.6"
  },
  "dependencies": {
    "@dqbd/tiktoken": "^1.0.22",
    "gsap": "^3.13.0",
    "lucide-react": "^0.542.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  }
}